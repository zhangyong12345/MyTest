{
    "verbose": true,
    "restartable": "rs",
    "execMap": {
        "js": "node --harmony",
        "ts": "ts-node"
    },
    "events": {
        "restart": "echo 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
    },
    "watch": [
        "config"
    ],
    "env": {
        "NODE_ENV": "test"
    },
    "exec": "ts-node ./src/app.ts",
    "ext": "ts js json"
}